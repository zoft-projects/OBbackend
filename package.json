{
  "name": "onebayshore-backend",
  "version": "1.0.0",
  "description": "Dedicated backend service for OneBayshore frontend applications",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "build": "tsc --build tsconfig.json",
    "check-types": "tsc lib",
    "prestart": "npm run build",
    "start": "node .",
    "start:watch": "npm run build && nodemon .",
    "test": "NODE_ENV=qa jest --silent",
    "test:local": "NODE_ENV=qa jest --detectOpenHandles",
    "test:watch": "NODE_ENV=qa npm run test:local -- --watch",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.294.0",
    "@aws-sdk/client-secrets-manager": "^3.85.0",
    "@aws-sdk/client-ses": "^3.812.0",
    "@aws-sdk/s3-request-presigner": "^3.294.0",
    "@azure/communication-chat": "^1.5.4",
    "@azure/communication-common": "^2.3.1",
    "@azure/communication-identity": "^1.3.1",
    "@bayshore-healthcare/lib-error-middleware": "^1.0.16",
    "@bayshore-healthcare/lib-logger": "1.0.4",
    "@bayshore-healthcare/lib-ping-authentication-middleware": "^1.0.26",
    "@codegenie/serverless-express": "^4.15.0",
    "@types/aws-lambda": "^8.10.141",
    "@types/chance": "^1.1.6",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/node": "^22.5.2",
    "@types/semver": "^7.5.8",
    "axios": "^1.7.9",
    "chance": "^1.1.12",
    "compression": "^1.7.5",
    "config": "~3.3.12",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "express": "^4.19.2",
    "express-request-id": "^1.4.1",
    "express-validator": "^7.2.1",
    "fast-equals": "^5.2.2",
    "firebase-admin": "^12.7.0",
    "fluent-ffmpeg": "^2.1.3",
    "google-auth-library": "^9.15.1",
    "http-errors": "~2.0.0",
    "jwt-decode": "^3.1.2",
    "mailcomposer": "^4.0.2",
    "method-override": "~3.0.0",
    "mongoose": "^8.7.2",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^2.1.11",
    "qs": "^6.13.0",
    "quickblox": "^2.15.5",
    "redis": "^4.7.0",
    "semver": "^7.7.1",
    "sharp": "^0.33.5",
    "ssh2-sftp-client": "^11.0.0"
  },
  "devDependencies": {
    "@types/config": "~3.3.5",
    "@types/cors": "^2.8.13",
    "@types/express": "~4.17.21",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/http-errors": "~2.0.1",
    "@types/jest": "^29.5.12",
    "@types/method-override": "~0.0.31",
    "@types/ms": "^0.7.31",
    "@types/nanoid": "^3.0.0",
    "@types/sharp": "^0.32.0",
    "@types/ssh2-sftp-client": "^9.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.6",
    "jest": "^29.6.4",
    "lint-staged": "^15.0.1",
    "mongodb-memory-server": "^9.2.0",
    "nodemon": "^3.1.9",
    "prettier": "^2.8.8",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.7.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "lib/**/*",
      "*.ts"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix"
    ]
  }
}
